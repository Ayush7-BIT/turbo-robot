public class HeapSort {

    // Function to build a max heap
    public void buildMaxHeap(int[] array, int n) {
        for (int i = n / 2 - 1; i >= 0; i--) {
            heapify(array, n, i);
        }
    }

    // Function to perform heap sort
    public void heapSort(int[] array) {
        int n = array.length;

        // Build the max heap
        buildMaxHeap(array, n);

        // Extract elements from the heap
        for (int i = n - 1; i >= 0; i--) {
            // Move the root (maximum element) to the end of the array
            int temp = array[0];
            array[0] = array[i];
            array[i] = temp;

            // Heapify the reduced heap
            heapify(array, i, 0);
        }
    }

    // Function to heapify a subtree rooted at node i, n is the size of the heap
    void heapify(int[] array, int n, int i) {
        int largest = i;  // Initialize largest as root
        int left = 2 * i + 1;  // Left child
        int right = 2 * i + 2;  // Right child

        // If left child is larger than root
        if (left < n && array[left] > array[largest]) {
            largest = left;
        }

        // If right child is larger than largest so far
        if (right < n && array[right] > array[largest]) {
            largest = right;
        }

        // If largest is not root, swap and continue heapifying
        if (largest != i) {
            int swap = array[i];
            array[i] = array[largest];
            array[largest] = swap;

            // Recursively heapify the affected subtree
            heapify(array, n, largest);
        }
    }

    // Utility function to print the array
    public void printArray(int[] array) {
        for (int element : array) {
            System.out.print(element + " ");
        }
        System.out.println();
    }

    // Main method to test the Heap Sort algorithm
    public static void main(String[] args) {
        HeapSort heapSort = new HeapSort();
        int[] array = {12, 11, 13, 5, 6, 7};

        System.out.println("Original array:");
        heapSort.printArray(array);

        heapSort.heapSort(array);

        System.out.println("Sorted array:");
        heapSort.printArray(array);
    }
}

#include <iostream>
using namespace std;

void deleteElement(int arr[], int& n, int p) {
    if (p < 0 || p >= n) {
        cout << "Invalid position!" << endl;
        return;
    }

  
    for (int i = p; i < n - 1; i++) {
        arr[i] = arr[i + 1];
    }

    n--;
}

// Function to display the array
void display(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
     int n;
     cout<<"Enter number of elements in the array: ";
     cin>>n;
     int arr[n];
     cout<<"Enter the elements of the array: ";
     for(int i=0;i<n;i++){
        cin>>arr[i];
     } 

    cout << "Original array: ";
    display(arr, n);

    int p;
    cout << "Enter the position to delete: ";
    cin >> p;

    deleteElement(arr, n, p-1);

    cout << "Array after deletion: ";
    display(arr, n);

    return 0;
}
